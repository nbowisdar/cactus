---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pricing = [
  {
    name: "Індивідуальна консультація",
    price: "800 грн",
    popular: false,
    features: [
      "Тривалість 50 хвилин",
      "Особиста зустріч або онлайн",
      "Один учасник",
      "Конфіденційність гарантована",
      "Персоналізована підтримка",
      "Гнучкий графік",
    ],
    button: {
      text: "Записатися",
      link: "/booking", // Замініть на реальний лінк для запису
    },
  },
  {
    name: "Пакет підтримки",
    price: {
      monthly: "2200 грн",
      annual: "2000 грн",
      discount: "10%",
      original: "2400 грн",
    },
    popular: true,
    features: [
      "3 консультації по 50 хвилин",
      "Особисто або онлайн",
      "Пріоритетний запис",
      "Додаткові матеріали та вправи",
      "Знижка 10% при оплаті за місяць",
      "Індивідуальний план роботи",
    ],
    button: {
      text: "Обрати пакет",
      link: "/booking/package", // Замініть на реальний лінк
    },
  },
  {
    name: "Сімейна терапія",
    price: "1200 грн",
    popular: false,
    features: [
      "Тривалість 60 хвилин",
      "Для пар або сімей",
      "Онлайн або в кабінеті",
      "Робота з конфліктами",
      "Індивідуальний підхід до групи",
      "Підтримка 24/7 по email",
    ],
    button: {
      text: "Зв’язатися",
      link: "/contact", // Замініть на реальний лінк для контактів
    },
  },
];
---

<Layout title="Вартість послуг">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Вартість послуг</Fragment>
      <Fragment slot="desc">
        Прозорі ціни та гнучкі умови. Обирайте те, що вам підходить.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>